<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
                 version="1.0">

    <access>FIELD</access>

    <mapped-superclass class="fr.cla.ddd.metamodel.AbstractEntity">
        <attributes>
            <embedded-id name="id"></embedded-id>
        </attributes>
    </mapped-superclass>

    <mapped-superclass class="fr.cla.ddd.metamodel.AbstractAggregateRoot">
        <attributes>
            <version name="version"></version>
        </attributes>
    </mapped-superclass>

    <entity class="fr.cla.ddd.metamodel.exampleapp.domain.Conference">
        <attributes>
            <one-to-many name="talks" fetch="EAGER">
                <join-column name="CONFERENCE_ID"></join-column>
                <cascade><cascade-all/></cascade>
            </one-to-many>
            <embedded name="cost"></embedded>
        </attributes>
    </entity>

    <entity class="fr.cla.ddd.metamodel.exampleapp.domain.Talk">
        <attributes>
            <embedded name="cost"></embedded>
        </attributes>
    </entity>

    <embeddable class="fr.cla.ddd.metamodel.exampleapp.domain.ConferenceId">
        <attributes>
            <basic name="value">
            </basic>
        </attributes>
    </embeddable>

    <embeddable class="fr.cla.ddd.metamodel.exampleapp.domain.MonetaryAmount">
        <attributes>
            <basic name="value">
            </basic>
        </attributes>
    </embeddable>

</entity-mappings>